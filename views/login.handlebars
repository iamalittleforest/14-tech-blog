<!-- login -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-bg">
      <div class="action-txt">Login</div>
    </div>
    <div class="card-body body-bg">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input class="form-control" id="username-login"></textarea>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input class="form-control" type="password" id="password-login"></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-bg btn-txt" type="submit" id="login-btn">Login</button>
      </div>
      <div>
        <a href="/signup">Sign Up Instead</a>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>