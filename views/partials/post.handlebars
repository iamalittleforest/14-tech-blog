<!-- view-post -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-header post-bg">
      <span class="post-title-txt">
        <a class="post-link" href="/posts/{{id}}">{{title}}</a>
      </span>
      <span class="post-user-txt">
        Posted by {{user.username}} on {{format_date date_created}}
      </span>
    </div>
    <div class="card-body body-bg">
      {{content}}
    </div>
  </div>
</div>