  <!-- header with navigation -->
  <header class="mb-3">
    <nav class="navbar navbar-expand-lg justify-content-between header-bg">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li class="nav-item px-3">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item px-3">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
        </ul>
        <ul class="nav navbar-nav">
        <!-- render links based on login status -->
        {{#if logged_in}}
          <li class="nav-item px-3">
            <a class="nav-link" id="logout" href="/logout">Logout</a>
          </li>
        {{else}}
          <li class="nav-item px-3">
            <a class="nav-link" href="/login">Login</a>
          </li>
        {{/if}}
        </ul>    
      </div>
    </nav>
    <nav class="navbar navbar-expand-lg header-bg">
      <div class="container-fluid  justify-content-center">
        <div class="navbar-brand text-white header-txt">The Tech Blog</div>
      </div>
    </nav>
  </header>

  <!-- main -->
  <main class="mb-3">
    <div class="container">
      <div class="row row-cols-1 g-2 align-item-center justify-content-center">
        <!-- render posts-->
        {{#each post as |post|}}
        <div class="col">
          <div class="card m-2">
            <div class="card-header post-header post-bg">
              <span class="post-title-txt">{{title}}</span>
              <span class="post-user-txt">Posted by {{user.username}} on {{format_date date_created}}</span>
            </div>
            <div class="card-body body-bg">
              {{content}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </main>