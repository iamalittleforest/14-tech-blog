<!-- create-post -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-bg">
      <div class="action-txt">Create Post</div>
    </div>
    <div class="card-body body-bg">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea class="form-control" id="title" rows="1"></textarea>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <textarea class="form-control" id="content" rows="3"></textarea>
      </div>
      <div>
        <button class="btn btn-bg btn-txt" type="button">Create</button>
      </div>
    </div>
  </div>
</div>

<!-- new post button -->
<div class="text-center">
  <button class="btn btn-bg btn-txt" type="button">+ New Post</button>
</div>

