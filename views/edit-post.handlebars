<!-- edit-post -->
<div class="col">
  <div class="card m-2">
    <div class="card-header post-bg">
      <div class="action-txt">Edit Post</div>
    </div>
    <div class="card-body body-bg">
      <div class="mb-3">
        <label for="title" class="form-label">{{title}}</label>
        <input class="form-control" id="edit-post-title"></textarea>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">{{content}}</label>
        <textarea class="form-control" id="edit-post-content" rows="3"></textarea>
      </div>
      <div>
        <button class="btn btn-bg btn-txt" type="submit" id="update-post-btn">Update</button>
        <button class="btn btn-bg btn-txt" type="submit" id="delete-post-btn">Delete</button>
      </div>
    </div>
  </div>
</div>

<script src="./js/edit-post.js"></script>